                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/linearlayoutpendidik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Dashboard"
                        android:textColor="@color/Abuabuhitam"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/labelupdatekm"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/bg_putih_gradasiatasabawah">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_round_arrow_forward_ios_24"
                            app:tint="@color/abuabupudar" />

                        <ImageView
                            android:id="@+id/imvkm"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_baseline_update_24"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/imvkm"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Update KM"
                            android:textColor="@color/Abuabuhitam" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/Abuabuputih"/>

