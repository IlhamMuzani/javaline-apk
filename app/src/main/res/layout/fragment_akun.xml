<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/layout_profilpendidik"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorAccent"
            android:background="@drawable/bg_gradasibawah">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/_15sdp"
                android:fontFamily="@font/quicksand_semi_bold"
                android:layout_marginBottom="@dimen/_70sdp"
                android:textSize="@dimen/_16sdp"
                android:text="Profile"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/_50sdp">


            <ImageView
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_2sdp"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/img_add_image" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_140sdp">

            <TextView
                android:id="@+id/txv_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:textStyle="bold" />

<!--            <TextView-->
<!--                android:id="@+id/txv_emailpendidik"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Email"-->
<!--                android:gravity="center"-->
<!--                android:textSize="@dimen/_10sdp"-->
<!--                android:textColor="@color/black"-->
<!--                android:fontFamily="@font/quicksand_semi_bold"-->
<!--                />-->

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                app:cardElevation="@dimen/_5sdp">

                <LinearLayout
                    android:id="@+id/linearlayoutpendidik"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Akun"
                        android:textColor="@color/Abuabuhitam"
                        android:fontFamily="@font/quicksand_semi_bold"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="MissingConstraints" />

                    <RelativeLayout
                        android:id="@+id/ubahprofilpendidik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:background="@drawable/bg_putih_gradasiatasabawah">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_round_arrow_forward_ios_24"
                            app:tint="@color/abuabupudar" />

                        <ImageView
                            android:id="@+id/imvprofilpendidik"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_akun"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/labelnikpendidik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/imvprofilpendidik"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Ubah Profil"
                            android:textColor="@color/Abuabuhitam" />


                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/Abuabuputih"/>

                    <RelativeLayout
                        android:id="@+id/ubahppasswordpendidik"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_putih_gradasiatasabawah">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_round_arrow_forward_ios_24"
                            app:tint="@color/abuabupudar" />

                        <ImageView
                            android:id="@+id/imvpasswordpendidik"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:src="@drawable/ic_outline_lock_24"
                            app:tint="@color/black" />

                        <TextView
                            android:id="@+id/labelpasswordpendidik"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/imvpasswordpendidik"
                            android:fontFamily="@font/quicksand_semi_bold"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:text="Ubah Password"
                            android:textColor="@color/Abuabuhitam" />


                    </RelativeLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:cardElevation="@dimen/_3sdp">

                <LinearLayout
                    android:id="@+id/linelogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_25sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:src="@drawable/ic_baseline_logout_24"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginEnd="@dimen/_5sdp"
                        app:tint="@color/abuabupudar" />

                    <TextView
                        android:id="@+id/txvLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logout"
                        android:textSize="@dimen/_16sdp"
                        android:textColor="@color/abuabupudar"
                        android:fontFamily="@font/quicksand_bold"
                        android:textStyle="bold" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>